<div class="container mx-auto">
  <h1 class="text-4xl font-bold mb-8">Posts</h1>

  <% @posts.each do |post| %>
    <div class="bg-white shadow-md rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-bold mb-4"><%= link_to post.title, post %></h2>
      <p class="text-gray-600 mb-4"><%= truncate(post.body, length: 100) %></p>
      <div class="flex justify-end">
        <p class="mr-4"><%= link_to "Edit", edit_post_path(post), class: "text-blue-500" %></p>
        <p><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500" %></p>
      </div>
    </div>
  <% end %>

  <%= link_to "New Post", new_post_path, class: "bg-blue-500 text-white px-4 py-2 rounded-lg" %>
</div>
