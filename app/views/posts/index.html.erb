<section>
  <div class="blog-posts">
    <h1 class="text-3xl font-bold mb-6">Posts</h1>

    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <div class="blog-post bg-gray-100 p-4 mb-4">
          <h2 class="text-2xl font-bold mb-2"><%= post.title %></h2>
          <p class="text-lg mb-4"><%= truncate(post.body, length: 100) %></p>
        </div>
      <% end %>
      <div class="post-actions mt-4">
        <p class="inline-block mr-4"><%= link_to "Edit", edit_post_path(post), class: "text-blue-500" %></p>
        <p class="inline-block"><%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500" %></p>
      </div>
    <% end %>
    <%= link_to "New Post", new_post_path, class: "text-blue-500 mt-4" %>
  </div>
</section>

